---
import Layout from "../layouts/Layout.astro";
import Container from "@components/Container.astro";
import GeneratorComponent from "@components/tools/PasswordGenerator";

const title = "Password & UUID Generator";
const description = "Generate strong passwords and UUIDs instantly.";
---

<Layout title={title} description={description}>
  <Container>
    <div class="mt-10 flex flex-col gap-8">
      <div class="animate">
        <h1 class="text-2xl font-semibold text-black dark:text-white">
          Password & UUID Generator üõ†Ô∏è
        </h1>
        <p class="mt-1 text-black/60 dark:text-white/60">
          Generate secure passwords and unique identifiers for your projects.
        </p>
      </div>

      <div class="animate w-full">
        <GeneratorComponent client:load />
      </div>

      <div class="animate mt-8 prose dark:prose-invert">
        <h3>Why use this tool?</h3>
        <ul>
          <li><strong>Secure:</strong> Generated client-side. No data is sent to any server.</li>
          <li><strong>Customizable:</strong> Tailor password complexity to your needs.</li>
          <li><strong>Developer Friendly:</strong> Quick access to standard UUID v4 generation.</li>
        </ul>
      </div>
    </div>
  </Container>
</Layout>
