---
import Layout from "../layouts/Layout.astro";
import Container from "@components/Container.astro";

const title = "Developer Tools";
const description = "A collection of useful developer tools.";

const tools = [
  {
    name: "JSON Formatter",
    description: "Format, validate, and minify JSON with VS Code-like experience.",
    href: "/json-formatter",
    icon: "üõ†Ô∏è",
  },
  {
    name: "QR Code Generator",
    description: "Generate QR codes from text or URLs instantly.",
    href: "/qrcode",
    icon: "üì±",
  },
];
---

<Layout title={title} description={description}>
  <Container>
    <div class="mt-16 flex flex-col gap-8">
      <div class="animate">
        <h1 class="text-3xl font-semibold text-black dark:text-white">
          Developer Tools üß∞
        </h1>
        <p class="mt-2 text-black/60 dark:text-white/60">
          Simple, privacy-focused tools to help you build faster.
        </p>
      </div>

      <div class="animate grid gap-6 sm:grid-cols-2">
        {
          tools.map((tool) => (
            <a
              href={tool.href}
              class="group relative flex flex-col gap-2 rounded-xl border border-black/15 bg-white p-6 transition-colors hover:bg-black/5 dark:border-white/20 dark:bg-neutral-900 dark:hover:bg-white/5"
            >
              <div class="text-3xl">{tool.icon}</div>
              <h2 class="text-xl font-semibold text-black dark:text-white">
                {tool.name}
              </h2>
              <p class="text-sm text-black/60 dark:text-white/60">
                {tool.description}
              </p>
            </a>
          ))
        }
      </div>
    </div>
  </Container>
</Layout>
